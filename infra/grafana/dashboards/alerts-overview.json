{
  "uid": "protos-farm-alerts-overview",
  "title": "Protos Farm â€” Alerts Overview",
  "tags": ["protos-farm", "alerts"],
  "timezone": "browser",
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Active Alerts",
      "type": "alertlist",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "options": {
        "showOptions": "current",
        "maxItems": 20,
        "sortOrder": 1,
        "stateFilter": {
          "firing": true,
          "pending": true,
          "noData": true,
          "normal": false,
          "error": true
        },
        "alertName": "",
        "folder": null,
        "datasource": "AlertManager"
      }
    },
    {
      "id": 2,
      "title": "Target Status (up/down)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "up{job=\"protos-farm-backend\"}",
          "legendFormat": "Backend",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "DOWN", "color": "red" },
                "1": { "text": "UP", "color": "green" }
              }
            }
          ],
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Latency p95 (threshold: 2s)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"protos-farm-backend\"}[5m]))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "title": "Error Rate 5xx (threshold: 1%)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_count{job=\"protos-farm-backend\", status_code=~\"5..\"}[5m]) / rate(http_request_duration_seconds_count{job=\"protos-farm-backend\"}[5m])",
          "legendFormat": "5xx rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.01 }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
