{
  "name": "protos-farm",
  "version": "0.1.0",
  "private": true,
  "description": "Protos Farm - Sistema de Gerenciamento de Fazendas",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev:backend": "pnpm --filter @protos-farm/backend dev",
    "dev:frontend": "pnpm --filter @protos-farm/frontend dev",
    "dev:mobile": "pnpm --filter @protos-farm/mobile start",
    "build:backend": "pnpm --filter @protos-farm/backend build",
    "build:frontend": "pnpm --filter @protos-farm/frontend build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.1"
  }
}
